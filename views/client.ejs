<%- include('includes/head.ejs', {formCSS: true, gridCSS: true, indexCSS: true}) %>

<body>
<%- include('includes/navigation.ejs', {activePath: 'client'}) %>

<div class="container">
    <form action="/client/create" method="POST">
        <div class="row">
            <div class="col-25">
                <label for="fname">First Name</label>
            </div>
            <div class="col-75">
                <input type="text" id="fname" name="firstName" placeholder="Your name.." class="form-control">
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label for="lname">Last Name</label>
            </div>
            <div class="col-75">
                <input type="text" id="lname" name="lastName" placeholder="Your last name.." class="form-control">
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label for="email">Email</label>
            </div>
            <div class="col-75">
                <input type="email" id="email" name="email" placeholder="Your email name.." class="form-control">
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label for="phone">Phone</label>
            </div>
            <div class="col-75">
                <input type="tel" id="phone" name="phone" placeholder="Your phone name.." class="form-control">
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label for="phone" hidden>is_paid</label>
            </div>
            <div class="col-75">
                <input type="radio" id="yes" name="is_paid" value="true">
                <label for="is_paid">Yes</label>

                <input type="radio" id="no" name="is_paid" value="false">
                <label for="is_paid">No</label></div>
        </div>

        <div class="row">
            <button type="submit">Send</button>
        </div>
    </form>
</div>

<% if(clients.length > 0) { %>
    <div id="tableLayout">
        <table>
            <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Is Paid</th>
            </tr>
            </thead>
            <tbody>
            <% for(let i = 0; i < clients.length; i++) { %>
                <tr>
                    <td><%= clients[i]['firstName'] %></td>
                    <td><%= clients[i]['lastName'] %></td>
                    <td><%= clients[i]['email'] %></td>
                    <td><%= clients[i]['phone'] %></td>
                    <td><%= clients[i]['is_paid'] %></td>
                </tr>
            <% } %>
            </tbody>
        </table>
    </div>
<% } %>
<%- include('includes/script.ejs') %>

</body>
</html>