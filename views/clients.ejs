<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>
<body>
<form action="/client/create" method="POST">
    <label for="firstName">First Name</label>
    <input type="text" name="firstName">
    <br>
    <label for="lastName">Last Name</label>
    <input type="text" name="lastName">
    <br>
    <label for="email">Email</label>
    <input type="email" name="email">
    <br>
    <label for="phone">Phone</label>
    <input type="tel" name="phone">
    <br>
    <input type="radio" id="yes" name="is_paid" value="true">
    <label for="is_paid">Yes</label>
    <br>
    <input type="radio" id="no" name="is_paid" value="false">
    <label for="is_paid">No</label>
    <br>

    <button type="submit">Send</button>


    <table>
        <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Is Paid</th>
        </tr>
        </thead>
        <tbody>
        <% for(let i = 0; i < clients.length; i++) { %>
            <tr>
                <td><%= clients[i]['firstName'] %></td>
                <td><%= clients[i]['lastName'] %></td>
                <td><%= clients[i]['email'] %></td>
                <td><%= clients[i]['phone'] %></td>
                <td><%= clients[i]['is_paid'] %></td>
            </tr>
        <% } %>
        </tbody>
    </table>
</form>
</body>
</html>