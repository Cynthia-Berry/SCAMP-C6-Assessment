<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel='stylesheet' href='/css/index.css'/>
    <link rel='stylesheet' href='/css/form.css'/>
    <link rel='stylesheet' href='/css/grid.css'/>
</head>
<body>
<header>
    <nav class="topnav" id="myTopnav">
        <a href="/">Home</a>
        <a href="client" class="active">Clients</a>
        <a href="user">User</a>
        <a href="invoice">Invoice</a>
        <a href="javascript:void(0);" class="icon" onclick="navView()">
            <i class="fa fa-bars"></i>
        </a>
    </nav>
</header>
<div class="container">
    <form action="/client/create" method="POST">
        <div class="row">
            <div class="col-25">
                <label for="fname">First Name</label>
            </div>
            <div class="col-75">
                <input type="text" id="fname" name="firstName" placeholder="Your name.." class="form-control">
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label for="lname">Last Name</label>
            </div>
            <div class="col-75">
                <input type="text" id="lname" name="lastName" placeholder="Your last name.." class="form-control">
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label for="email">Email</label>
            </div>
            <div class="col-75">
                <input type="email" id="email" name="email" placeholder="Your email name.." class="form-control">
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label for="phone">Phone</label>
            </div>
            <div class="col-75">
                <input type="tel" id="phone" name="phone" placeholder="Your phone name.." class="form-control">
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label for="phone" hidden>is_paid</label>
            </div>
            <div class="col-75">
                <input type="radio" id="yes" name="is_paid" value="true">
                <label for="is_paid">Yes</label>

                <input type="radio" id="no" name="is_paid" value="false">
                <label for="is_paid">No</label></div>
        </div>

        <div class="row">
            <button type="submit">Send</button>
        </div>
    </form>
</div>

<% if(clients.length > 0) { %>
    <div id="tableLayout">
        <table>
            <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Is Paid</th>
            </tr>
            </thead>
            <tbody>
            <% for(let i = 0; i < clients.length; i++) { %>
                <tr>
                    <td><%= clients[i]['firstName'] %></td>
                    <td><%= clients[i]['lastName'] %></td>
                    <td><%= clients[i]['email'] %></td>
                    <td><%= clients[i]['phone'] %></td>
                    <td><%= clients[i]['is_paid'] %></td>
                </tr>
            <% } %>
            </tbody>
        </table>
    </div>
<% } %>
<script src="/js/index.js"></script>

</body>
</html>