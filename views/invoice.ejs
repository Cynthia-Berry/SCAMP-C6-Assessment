<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel='stylesheet' href='/css/index.css'/>
    <link rel='stylesheet' href='/css/form.css'/>
    <link rel='stylesheet' href='/css/grid.css'/>
</head>
<body>
<header>
    <nav class="topnav" id="myTopnav">
        <a href="/">Home</a>
        <a href="client">Clients</a>
        <a href="user">User</a>
        <a href="invoice" class="active">Invoice</a>
        <a href="javascript:void(0);" class="icon" onclick="navView()">
            <i class="fa fa-bars"></i>
        </a>
    </nav>
</header>

<div class="container">
    <form action="/invoice" method="POST">
        <div class="row">
            <div class="col-25">
                <label for="ref">Invoice Ref</label>
            </div>
            <div class="col-75">
                <input type="text" id="ref" name="invoiceRef" class="form-control">
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label for="charge">Charge</label>
            </div>
            <div class="col-75">
                <input type="number" id="charge" name="charge" class="form-control">
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label for="balance">Balance</label>
            </div>
            <div class="col-75">
                <input type="number" id="balance" name="balance" class="form-control">
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label for="discount">Discount</label>
            </div>
            <div class="col-75">
                <input type="number" id="discount" name="discount" class="form-control">
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label for="phone" hidden>is_paid</label>
            </div>
            <div class="col-75">
                <input type="radio" id="yes" name="is_paid" value="true">
                <label for="is_paid">Yes</label>

                <input type="radio" id="no" name="is_paid" value="false">
                <label for="is_paid">No</label></div>
        </div>

        <div class="row">
            <button type="submit">Send</button>
        </div>
    </form>
</div>

<% if(invoices.length > 0) { %>
    <div id="tableLayout">
        <table>
            <thead>
            <tr>
                <th>Reference Number</th>
                <th>Charge</th>
                <th>Discount</th>
                <th>Balance</th>
                <th>Is Paid</th>
            </tr>
            </thead>
            <tbody>
            <% for(let i = 0; i < invoices.length; i++) { %>
                <tr>
                    <td><%= invoices[i]['invoiceRef'] %></td>
                    <td><%= invoices[i]['charge'] %></td>
                    <td><%= invoices[i]['discount'] %></td>
                    <td><%= invoices[i]['balance'] %></td>
                    <td><%= invoices[i]['is_paid'] %></td>
                </tr>
            <% } %>
            </tbody>
        </table>
    </div>
<% } %>
<script src="/js/index.js"></script>

</body>
</html>