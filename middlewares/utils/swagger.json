  "paths": {
    "/client": {
      "get": {
        "tags": [
          "Client Services"
        ],
        "summary": "API to fetch all clients",
        "responses": {
          "200": {
            "description": "Client fetched successful"
          }
        },
        "security": [
          {
            "Auth": []
          }
        ],
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          },
          {
            "name": "size",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ]
      }
    },
    "/client/:id": {
      "get": {
        "tags": [
          "Client Services"
        ],
        "summary": "API to get a client information",
        "responses": {
          "200": {
            "description": "Client fetched successfully"
          }
        },
        "security": [
          {
            "Auth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Client"
              }
            }
          }
        }
      }
    },
    "/client/create": {
      "post": {
        "tags": [
          "Client Services"
        ],
        "summary": "API to create a client",
        "responses": {
          "200": {
            "description": "Client created successfully"
          }
        },
        "security": [
          {
            "Auth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Client"
              }
            }
          }
        }
      }
    },
    "/client/update": {
      "patch": {
        "tags": [
          "Client Services"
        ],
        "summary": "API to edit a client",
        "responses": {
          "200": {
            "description": "Client updated successfully"
          }
        },
        "security": [
          {
            "Auth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateClient"
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "Auth": {
        "type": "apiKey",
        "in": "header",
        "name": "Authorization",
        "description": "JWT Authorization header using the JWT scheme. Enter your JWT token in the text input below. Example: 'JWT token'"
      }
    },
    "responses": {
      "Unauthorized": {
        "description": "Error occurred, not authorised to view this resource"
      }
    },
    "schemas": {
      "Client": {
        "required": [
          "firstName",
          "lastName",
          "email",
          "phone",
          "organization"
        ],
        "properties": {
          "firstName": {
            "type": "string"
          },
          "lastName": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "phone": {
            "type": "string"
          },
          "organization": {
            "type": "string"
          }
        }
      },
      "UpdateClient": {
        "properties": {
          "firstName": {
            "type": "string"
          },
          "lastName": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "phone": {
            "type": "string"
          },
          "organization": {
            "type": "string"
          },
          "userId": {
            "type": "string"
          }
        }
      }
    }
  }
